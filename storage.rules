rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read any file
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Allow users to upload profile images to their own folder
    match /profile_images/{fileName} {
      allow write: if request.auth != null
        && fileName.matches('profile_' + request.auth.uid + '_.*');
    }

    // Fallback for other authenticated operations
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
