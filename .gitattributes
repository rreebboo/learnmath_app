# Auto detect text files and perform LF normalization
* text=auto

# Claude settings should maintain their original line endings
.claude/**/* text eol=lf

# Dart and Flutter files
*.dart text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf

# Windows batch files
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary